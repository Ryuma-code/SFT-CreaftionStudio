<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
            android:clipToPadding="false"
        android:paddingBottom="@dimen/bottom_nav_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Greeting Section -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/greeting_format"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAppSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:text="@string/welcome_subtitle"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <!-- Points Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPoints"
                style="@style/Widget.App.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:src="@drawable/ic_points_gem"
                        android:contentDescription="@string/points_icon_description" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/spacing_md">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_points"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnPrimaryContainer"/>

                        <TextView
                            android:id="@+id/tvPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150.000"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Mission Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/special_mission"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_md"/>

            <!-- Featured Mission Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMission"
                style="@style/Widget.App.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Mission Image -->
                    <ImageView
                        android:id="@+id/imgMission"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/mission_image_height"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mission_image_placeholder"
                        android:contentDescription="@string/mission_image_description"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Image Overlay -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/scrim_gradient_dark"
                        app:layout_constraintBottom_toBottomOf="@id/imgMission"
                        app:layout_constraintEnd_toEndOf="@id/imgMission"
                        app:layout_constraintStart_toStartOf="@id/imgMission"
                        app:layout_constraintTop_toTopOf="@id/imgMission" />

                    <!-- Days Left Badge -->
                    <TextView
                        android:id="@+id/tvDaysLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_md"
                        android:background="@drawable/background_tag_dark"
                        android:paddingHorizontal="@dimen/spacing_sm"
                        android:paddingVertical="@dimen/spacing_xs"
                        android:text="30 hari lagi"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Mission Title -->
                    <TextView
                        android:id="@+id/tvMissionTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/padding_medium"
                        android:layout_marginBottom="@dimen/spacing_xs"
                        android:text="@string/mission_collect_plastic"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/chipGroup"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- Chips -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/padding_medium"
                        android:layout_marginBottom="@dimen/padding_medium"
                        app:layout_constraintBottom_toBottomOf="@id/imgMission"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/tagPlastik"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/category_plastic" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/tagPoints"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.000 Poin"
                            app:chipIcon="@drawable/ic_points_gem" />
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Mission Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium"
                        app:layout_constraintTop_toBottomOf="@id/imgMission">

                        <TextView
                            android:id="@+id/tvMissionDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_md"
                            android:text="@string/mission_description_plastic"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStartMission"
                            style="@style/Widget.App.Button.Primary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/start_mission"
                            app:icon="@drawable/ic_arrow_right"
                            app:iconGravity="textEnd" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTanyaAI"
                    style="@style/Widget.App.Button.Secondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:text="@string/ask_ai"
                    app:icon="@drawable/ic_ai_spark" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScanWaste"
                    style="@style/Widget.App.Button.Secondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:text="@string/scan_waste"
                    app:icon="@drawable/ic_scissors" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>